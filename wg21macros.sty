    \let\oexposid\exposid\let\exposid\textit%
    {\noindent\wgOrigSection{#1}\larger[1]\textbf{\theWGSubSection{} #2\label{sec:\wgLabelPrefix#3}\hfill[#3]}}\\%
    \let\exposid\oexposid%
    \noindent%
}
