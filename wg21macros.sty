\newcommand{\wgOrigSection}[1]{%
    \leavevmode\llap{\normalfont\usekomafont{#1}(\csname #1format\endcsname\hspace{-.3em})\qquad}%
}
\makeatletter
\newcommand{\wgSection}[2]{%
    \par%
    \vskip1.0\baselineskip plus 1.5\baselineskip minus 0.2\baselineskip%
    \phantomsection%
    \stepcounter{subsection}%
    \stepcounter{WGClause}%
    \setcounter{Paras}{0}%
    \def\theWgStableName{#2}%
    \def\theWGSubSection{\theWGClause{}}%
    \def\theWGSubSubSection{\theWGClause{}}%
    \protected@edef\@currentlabel{\theWGSubSection}%
    \addcontentsline{toc}{subsection}{(\thesubsection{}) \theWGClause{} #1 [#2]}%
    {\noindent\wgOrigSection{subsection}\larger[2]\arabic{WGClause} #1\label{sec:#2}\hfill[#2]}\\%
    \noindent%
}
\newcommand\wgSubsection[2]{%
    \par%
    \vskip0.75\baselineskip plus 1.0\baselineskip minus 0.15\baselineskip%
    \phantomsection%
    \stepcounter{subsubsection}%
    \stepcounter{WGSubSection}%
    \setcounter{Paras}{0}%
    \def\theWgStableName{#2}%
    \def\theWGSubSection{\theWGClause{}.\arabic{WGSubSection}}%
    \def\theWGSubSubSection{\theWGSubSection{}}%
    \protected@edef\@currentlabel{\theWGSubSection}%
    \addcontentsline{toc}{subsubsection}{(\thesubsubsection{}) \theWGSubSection{} #1 [#2]}%
    {\noindent\wgOrigSection{subsubsection}\larger[1]\theWGSubSection{} #1\label{sec:#2}\hfill[#2]}\\%
    \noindent%
}
\newcommand\wgSubsubsection[2]{%
    \par%
    \vskip0.5\baselineskip plus .5\baselineskip minus 0.1\baselineskip%
    \phantomsection%
    \stepcounter{paragraph}%
    \stepcounter{WGSubSubSection}%
    \setcounter{Paras}{0}%
    \def\theWgStableName{#2}%
    \def\theWGSubSubSection{\theWGSubSection{}.\arabic{WGSubSubSection}}%
    \protected@edef\@currentlabel{\theWGSubSubSection}%
    \addcontentsline{toc}{paragraph}{(\theparagraph{}) \theWGSubSubSection{} #1 [#2]}%
    {\noindent\wgOrigSection{paragraph}\theWGSubSubSection{} #1\label{sec:#2}\hfill[#2]}\\%
    \noindent%
}
\newcommand\wgSubsubsubsection[2]{%
    \par%
    \vskip0.5\baselineskip plus .5\baselineskip minus 0.1\baselineskip%
    \phantomsection%
    \stepcounter{subparagraph}%
    \stepcounter{WGSubSubSubSection}%
    \setcounter{Paras}{0}%
    \def\theWgStableName{#2}%
    \def\theWGSubSubSection{\theWGSubSection{}.\arabic{WGSubSubSection}.\arabic{WGSubSubSubSection}}%
    \protected@edef\@currentlabel{\theWGSubSubSubSection}%
    \addcontentsline{toc}{subparagraph}{(\thesubparagraph{}) \theWGSubSubSubSection{} #1 [#2]}%
    {\noindent\wgOrigSection{subparagraph}\theWGSubSubSection{} #1\label{sec:#2}\hfill[#2]}\\%
    \noindent%
}
\makeatother

